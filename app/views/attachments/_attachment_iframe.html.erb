<script type="text/javascript">  
  function resizeIframe(obj) {
	obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
  }
</script>
<iframe src="<%= named_attachment_url(@attachment, @attachment.filename, :view_inline => 'true') %>" style="width: 100%; height: 16px;" seamless="seamless" scrolling="no" frameborder="0" allowtransparency="true" onload="resizeIframe(this);">
</iframe>	
